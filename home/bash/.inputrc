# thanks to http://linuxg.net/2-bash-inputrc-tricks-tab-tab-and-case-insensitive-completion/
set completion-ignore-case On
set input-meta On
set output-meta On
set convert-meta On
set show-all-if-ambiguous On
set mark-directories On
set expand-tilde On

# ctrl+arrows
"\e[1;5D": backward-word
"\e[1;5C": forward-word

# alt+arrows
"\e[1;9D": backward-word
"\e[1;9C": forward-word

