# thanks to http://linuxg.net/2-bash-inputrc-tricks-tab-tab-and-case-insensitive-completion/
set completion-ignore-case On
set input-meta On
set output-meta On
set convert-meta Off
set show-all-if-ambiguous On
set mark-directories On

# ctrl+arrows
"\e[1;5D": backward-word
"\e[1;5C": forward-word

# alt+arrows
"\e[1;9D": backward-word
"\e[1;9C": forward-word

# alt+b
"\xe2\x88\xab":"\eb"
# alt+d
"\xe2\x88\x82":"\ed"
# alt+f
"\xc6\x92":"\ef"

